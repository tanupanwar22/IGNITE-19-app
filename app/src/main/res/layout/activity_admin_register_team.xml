<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Admin.AdminAddTeam.AdminRegisterTeam">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <EditText
                android:id="@+id/edx1_username"

                style="@android:style/Widget.Holo.Light.EditText"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:background="@drawable/edit_text_shape2"
                android:padding="8dp"
                android:ems="10"
                android:hint="Leader Email-ID"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/guideline4" />

            <EditText
                android:id="@+id/edx2_pw"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_shape2"

                android:padding="8dp"
                android:ems="10"
                android:hint="Unique college ID"
                android:inputType="textPassword"
                app:layout_constraintEnd_toEndOf="@+id/edx1_username"
                app:layout_constraintStart_toStartOf="@+id/edx1_username"
                app:layout_constraintTop_toBottomOf="@+id/edx1_username" />

            <EditText
                android:id="@+id/ed3_college_name"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_shape2"
                android:padding="8dp"
                android:ems="10"
                android:hint="College name"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/edx2_pw"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edx2_pw"
                app:layout_constraintTop_toBottomOf="@+id/edx2_pw" />

            <EditText
                android:id="@+id/edx_p1"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_shape2"
                android:padding="8dp"
                android:ems="10"
                android:hint="Participant 1"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/ed3_college_name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/ed3_college_name"
                app:layout_constraintTop_toBottomOf="@+id/ed3_college_name" />

            <EditText
                android:id="@+id/edx_p2"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_shape2"
                android:padding="8dp"
                android:ems="10"
                android:hint="Participant 2"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/edx_p1"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edx_p1"
                app:layout_constraintTop_toBottomOf="@+id/edx_p1" />

            <EditText
                android:id="@+id/edx_p3"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_shape2"
                android:padding="8dp"
                android:ems="10"
                android:hint="Participant 3"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/edx_p2"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edx_p2"
                app:layout_constraintTop_toBottomOf="@+id/edx_p2" />

            <EditText
                android:id="@+id/edx_p4"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_shape2"
                android:padding="8dp"
                android:ems="10"
                android:hint="Participant 4"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/edx_p3"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edx_p3"
                app:layout_constraintTop_toBottomOf="@+id/edx_p3" />

            <EditText
                android:id="@+id/edx_p5"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_text_shape2"
                android:padding="8dp"
                android:ems="10"
                android:hint="Participant 5"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="@+id/edx_p4"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/edx_p4"
                app:layout_constraintTop_toBottomOf="@+id/edx_p4" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <Button
                android:id="@+id/button_register_team"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_shape"
                android:text="Register"
                android:textColor="@color/contrasText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edx_p5" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/xxxlottie"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:lottie_fileName="standardloader.json"
                app:layout_constraintBottom_toBottomOf="@+id/button_register_team"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
               app:lottie_autoPlay="true"
                app:lottie_loop="true"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>